<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chiru.sareesamrat.EditContent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTitle"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:background="@drawable/edittextboxstyle"
        android:clickable="false"
        android:cursorVisible="false"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:focusable="false"
        android:inputType="textCapWords"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : Title cannot be changed. "
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="2dp"
        android:layout_below="@+id/editTextTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Description:"
        android:layout_below="@+id/textView1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDescription"
        android:hint="Enter new Description (Max 80 chars)"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:maxLength="80"
        android:layout_margin="2dp"
        android:background="@drawable/edittextboxstyle"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Price:"
        android:layout_below="@+id/editTextDescription"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPrice"
        android:hint="Enter new Price"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:layout_margin="2dp"
        android:background="@drawable/edittextboxstyle"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Quantity:"
        android:layout_below="@+id/editTextPrice"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextQuantity"
        android:hint="Enter new Quantity"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:layout_margin="2dp"
        android:background="@drawable/edittextboxstyle"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUpdateProduct"
        android:text="Update"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:background="@drawable/my_button"
        android:layout_below="@+id/editTextQuantity"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
