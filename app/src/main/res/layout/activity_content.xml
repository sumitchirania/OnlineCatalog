<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chiru.sareesamrat.ContentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWelcomeMsg"
        android:textSize="24sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/context"
        android:layout_below="@+id/textViewWelcomeMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/textView15" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddProduct"
        android:text="Add Items"
        android:background="@drawable/my_button1"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="70dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonViewProduct"
        android:text="My Items"
        android:background="@drawable/my_button1"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonAddProduct"
        android:layout_marginTop="30dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonViewProfile"
        android:text="My Profile"
        android:background="@drawable/my_button1"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonViewProduct"
        android:layout_marginTop="30dp" />


</RelativeLayout>
